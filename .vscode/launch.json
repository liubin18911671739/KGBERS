{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask run",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/venv/bin/flask",
      "args": ["run"],
      "cwd": "${workspaceFolder}",
      "env": {
        "FLASK_APP": "run.py",
        "FLASK_ENV": "development"
      },
      "debugOptions": ["RedirectOutput"],
      "console": "integratedTerminal"
    }
  ]
}
